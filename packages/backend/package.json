{
  "name": "@opendata-api/backend",
  "version": "1.0.0",
  "description": "Backend API for Open Data Platform",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json && npm run build:copy-files",
    "build:copy-files": "cp -r src/adapters dist/adapters 2>/dev/null || true",
    "build:vercel": "vite build",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:unit": "vitest run --dir src",
    "test:integration": "vitest run --dir test/integration",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts",
    "test:coverage": "vitest --coverage",
    "test:coverage:e2e": "vitest run --config vitest.e2e.config.ts --coverage",
    "test:performance": "vitest run test/performance/rate-limit-load.test.ts",
    "test:performance:gc": "node --expose-gc ./node_modules/.bin/vitest run test/performance/rate-limit-load.test.ts",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "size": "echo 'Size analysis not configured for backend'",
    "clean": "rm -rf dist coverage .turbo",
    "validate:env": "tsx scripts/validate-env.ts",
    "validate:json": "node scripts/validate-json.cjs",
    "setup:data": "bash scripts/setup-data.sh",
    "backup:health-check": "tsx ../../scripts/backup/check-backup-health.ts",
    "db:seed": "tsx src/commands/seed.command.ts seed",
    "db:reset": "tsx src/commands/seed.command.ts reset",
    "dev:setup": "npm run db:seed"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@scalar/fastify-api-reference": "^1.24.0",
    "@sinclair/typebox": "^0.34.35",
    "@supabase/supabase-js": "^2.50.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/semver": "^7.7.0",
    "@types/uuid": "^10.0.0",
    "chokidar": "^4.0.3",
    "dotenv": "^16.5.0",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "lru-cache": "^11.1.0",
    "pino": "^9.1.0",
    "pino-multi-stream": "^6.0.0",
    "pino-pretty": "^11.1.0",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rotating-file-stream": "^3.2.6",
    "semver": "^7.7.2",
    "tsyringe": "^4.10.0",
    "uuid": "^11.1.0",
    "yaml": "^2.8.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@rollup/plugin-commonjs": "^28.0.5",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vercel/node": "^5.2.2",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^11.0.3",
    "supabase": "^2.24.3",
    "terser": "^5.42.0",
    "tsx": "^4.11.0",
    "typescript": "^5.4.0",
    "vite": "^6.3.5",
    "vitest": "^1.6.0"
  }
}
